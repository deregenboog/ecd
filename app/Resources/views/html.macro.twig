{% macro link(label, url, icon) %}
    <a href="{{ url }}">
        {% if icon %}
            <span class="glyphicon glyphicon-{{ icon }}" aria-hidden="true"></span>
        {% endif %}
        {{ label }}
    </a>
{% endmacro %}

{% macro iconLink(url, icon) %}
    <a href="{{ url }}">
        {% if icon %}
            <span class="glyphicon glyphicon-{{ icon }}" aria-hidden="true"></span>
        {% endif %}
    </a>
{% endmacro %}

