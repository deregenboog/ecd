<h2>Basisgegevens</h2>
<p>
    {{ html.viewLink(path('app_klanten_view', {id: klant.id})) }}
    {{ html.link('Bekijken', path('app_klanten_view', {id: klant.id})) }}
    {{ html.editLink(path('app_klanten_edit', {id: klant.id})) }}
    {{ html.link('Wijzigen', path('app_klanten_edit', {id: klant.id})) }}
</p>
<dl class="dl-horizontal">
    <dt>Naam</dt>
    <dd>{{ klant }}</dd>
    <dt>Geslacht</dt>
    <dd>{{ klant.geslacht.volledig }}</dd>
    <dt>Geboortedatum</dt>
    <dd>{{ klant.geboortedatum ? klant.geboortedatum|date('d-m-Y') }}</dd>
    <dt>Geboorteland</dt>
    <dd>{{ klant.land }}</dd>
    <dt>Nationaliteit</dt>
    <dd>{{ klant.nationaliteit }}</dd>
    <dt>BSN</dt>
    <dd>{{ klant.bsn }}</dd>
    <dt>Medewerker</dt>
    <dd>{{ klant.medewerker }}</dd>
    <dt>Adres</dt>
    <dd>
        {{ klant.adres }}<br>
        {{ klant.postcode }} {{ klant.plaats }}
    </dd>
    <dt>Werkgebied</dt>
    <dd>{{ klant.werkgebied }}</dd>
    <dt>Postcodegebied</dt>
    <dd>{{ klant.postcodegebied }}</dd>
    <dt>Mobiel</dt>
    <dd>{{ klant.mobiel }}</dd>
    <dt>Telefoon</dt>
    <dd>{{ klant.telefoon }}</dd>
    <dt>E-mail</dt>
    <dd>{{ klant.email }}</dd>
</dl>
<dl class="dl-horizontal">
    <dt>Geen post</dt>
    <dd>{{ klant.geenPost ? 'ja' : 'nee' }}</dd>
    <dt>Geen e-mail</dt>
    <dd>{{ klant.geenEmail ? 'ja' : 'nee' }}</dd>
    <dt>Opmerking</dt>
    <dd>{{ klant.opmerking }}</dd>
</dl>
