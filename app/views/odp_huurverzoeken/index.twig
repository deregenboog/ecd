{% include 'odp_subnavigation.twig' %}

<h1>Huurverzoeken</h1>

<table>
    <tr>
        {{ form_start(filter) }}
        <th>
            {{ form_widget(filter.id) }}
            {{ form_errors(filter.id) }}
        </th>
        <th>
            {{ form_widget(filter.klant.naam) }}
            {{ form_errors(filter.klant.naam) }}
        </th>
        <th>
            {{ form_widget(filter.klant.stadsdeel) }}
            {{ form_errors(filter.klant.stadsdeel) }}
        </th>
        <th>
            {{ form_widget(filter.startdatum) }}
            {{ form_errors(filter.startdatum) }}
        </th>
        <th>
            {{ form_widget(filter.einddatum) }}
            {{ form_errors(filter.einddatum) }}
        </th>
        <th>
            <button type="submit">Filteren</button>
        </th>
        {{ form_end(filter) }}
    </tr>
    <tr>
        <th>
            {{ knp_pagination_sortable(pagination, '#', 'odpHuurverzoek.id') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Huurder', 'klant.achternaam') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Stadsdeel', 'klant.werkgebied') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Startdatum', 'odpHuurverzoek.startdatum') }}
        </th>
        <th>
            {{ knp_pagination_sortable(pagination, 'Einddatum', 'odpHuurverzoek.einddatum') }}
        </th>
        <th>
        </th>
    </tr>
    {% for odpHuurverzoek in pagination %}
    <tr>
        <td>
            {{ html.link(odpHuurverzoek.id, {'action': 'view', 0: odpHuurverzoek.id})|raw }}
        </td>
        <td>
            {{ odpHuurverzoek.odpHuurder.klant.naam }}
        </td>
        <td>
            {{ odpHuurverzoek.odpHuurder.klant.werkgebied }}
        </td>
        <td>
            {{ odpHuurverzoek.startdatum | date('d-m-Y') }}
        </td>
        <td>
            {{ odpHuurverzoek.einddatum ? odpHuurverzoek.einddatum | date('d-m-Y') : '-' }}
        </td>
        <td>
            {{ html.viewLink({'action': 'view', 0: odpHuurverzoek.id})|raw }}
            {{ html.editLink({'action': 'edit', 0: odpHuurverzoek.id})|raw }}
            {% if odpHuurverzoek.deletable %}
                {{ html.deleteLink({'action': 'delete', 0: odpHuurverzoek.id})|raw }}
            {% endif %}
        </td>
    </tr>
    {% endfor %}
</table>

<p>
    {{ knp_pagination_render(pagination) }}
</p>
