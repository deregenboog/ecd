{% include 'odp_subnavigation.twig' %}

<h1>
    Huurovereenkomst {{ odpHuurovereenkomst.odpHuurder.klant }} en {{ odpHuurovereenkomst.odpVerhuurder.klant }}
    {% if odpHuurovereenkomst.editable %}
        {{ html.editLink({'action': 'edit', 0: odpHuurovereenkomst.id})|raw }}
    {% endif %}
    {% if odpHuurovereenkomst.deletable %}
        {{ html.deleteLink({'action': 'delete', 0: odpHuurovereenkomst.id})|raw }}
    {% endif %}
