<dl>
    <dt>#</dt>
    <dd>{{ odpHuurovereenkomst.id }}</dd>
    <dt>Huurder</dt>
    <dd>{{ odpHuurovereenkomst.odpHuurder.klant }}</dd>
    <dt>Verhuurder</dt>
    <dd>{{ odpHuurovereenkomst.odpVerhuurder.klant }}</dd>
    <dt>Startdatum</dt>
    <dd>{{ odpHuurovereenkomst.startdatum | date('d-m-Y') }}</dd>
    <dt>Einddatum</dt>
    <dd>{{ odpHuurovereenkomst.einddatum ? odpHuurovereenkomst.einddatum | date('d-m-Y') : 'onbepaald' }}</dd>
</dl>
