{% include 'elements/iz_subnavigation.twig' %}

<h2>Selecties</h2>
{{ form_start(form) }}
<div class="left3cDiv">
    <fieldset>
        <legend>Projecten</legend>
        {{ form_widget(form.alleProjecten) }}
        {{ form_errors(form.alleProjecten) }}
        {{ form_widget(form.izProjecten, {'attr': {'size': 20}}) }}
        {{ form_errors(form.izProjecten) }}
    </fieldset>
</div>
<div class="center3cDiv">
    <fieldset>
        <legend>Stadsdelen</legend>
        {{ form_widget(form.alleStadsdelen) }}
        {{ form_errors(form.alleStadsdelen) }}
        {{ form_widget(form.stadsdelen, {'attr': {'size': 20}}) }}
        {{ form_errors(form.stadsdelen) }}
    </fieldset>
</div>
<div class="right3cDiv">
    <fieldset>
        <legend>Personen</legend>
        <p>Selecteer deelnemers en/of vrijwilligers.</p>
        {{ form_widget(form.personen) }}
        {{ form_errors(form.personen) }}
    </fieldset>
    <fieldset>
        <legend>Communicatievorm</legend>
        <p>Selecteer de communicatievorm.</p>
        <p>
            Als je "Geen email" aanvinkt worden de mensen die geen email willen ontvangen weggelaten.
            Als je "Geen post" aanvinkt worden de mensen die geen post willen ontvangen weggelaten.
            Beide uitgeschakeld betekent: iedereen, ongeacht communicatievoorkeur.
        </p>
        {{ form_widget(form.communicatie) }}
        {{ form_errors(form.communicatie) }}
    </fieldset>
</div>
<fieldset class="action data">
    <legend>Formaat</legend>
    {{ form_widget(form.formaat) }}
    {{ form_errors(form.formaat) }}
    <button type="submit">Downloaden</button>
 </fieldset>
{{ form_end(form) }}

<script type="text/javascript">
    $(function() {
        $('#iz_deelnemer_selectie_alleProjecten').change(function() {
            if ($('#iz_deelnemer_selectie_alleProjecten').is(':checked')) {
                $('#iz_deelnemer_selectie_izProjecten input').prop('checked', true);
            } else {
                $('#iz_deelnemer_selectie_izProjecten input').prop('checked', false);
            }
        });

        $('#iz_deelnemer_selectie_izProjecten input').change(function() {
            $('#iz_deelnemer_selectie_alleProjecten').prop('checked', false);
        });

        $('#iz_deelnemer_selectie_alleStadsdelen').change(function() {
            if ($('#iz_deelnemer_selectie_alleStadsdelen').is(':checked')) {
                $('#iz_deelnemer_selectie_stadsdelen input').prop('checked', true);
            } else {
                $('#iz_deelnemer_selectie_stadsdelen input').prop('checked', false);
            }
        });

        $('#iz_deelnemer_selectie_izProjecten input').change(function() {
            $('#iz_deelnemer_selectie_alleProjecten').prop('checked', false);
        });

        // check all
        $('#iz_deelnemer_selectie_alleProjecten').prop('checked', true);
        $('#iz_deelnemer_selectie_izProjecten input').prop('checked', true);
        $('#iz_deelnemer_selectie_alleStadsdelen').prop('checked', true);
        $('#iz_deelnemer_selectie_stadsdelen input').prop('checked', true);
    });
</script>
