{% import 'html.macro.twig' as html %}

<nav class="navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('home') }}">
            <img src="{{ asset('img/drg-logo-50px.jpg') }}" alt="Logo DRG">
        </a>
        <ul class="nav navbar-nav navbar-right">
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                <li class="pull-left">
                    {% if not is_granted("IS_IMPERSONATOR") %}
                    <a href="{{ path('home') }}">
                        Ingelogd als {{ app.user.naam }}
                    </a>
                    {% else %}
                        <a href="{{ impersonation_exit_path(path("home")) }}">
                            !! Ingelogd als {{ app.user.naam }} (Klik hier om terug te gaan) !!
                        </a>

                    {% endif %}
                </li>
                <li>
                    <a href="{{ path('logout') }}">
                        <span class="glyphicon glyphicon-log-out"></span>
                        Uitloggen
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"
                data-toggle="collapse" data-target="#navbar-collapse-1"
                aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav">
                {% include 'navigation.html.twig' %}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
