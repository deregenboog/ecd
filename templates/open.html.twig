{% extends 'base.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }} dossier (her)openen</h1>
    {% if redirect_uri is null and route_exists(route_base~'index') %}
        {{ html.link('Annuleren', path(route_base~'index',{redirect: redirect_uri}), 'cancel') }}
    {% elseif redirect_uri is defined %}
        {{ html.link('Annuleren', redirect_uri, 'cancel') }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if form is defined %}
        {{ form(form) }}
    {% endif %}
{% endblock %}