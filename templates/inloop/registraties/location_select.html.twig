{% extends 'base.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block content %}
    <h1>Locatieselectie</h1>
    <p>Selecteer je huidige locatie uit onderstaande lijst.</p>
    <ul>
        {% for locatie in locaties %}
            <li>
                <a href="{{ path('inloop_registraties_klanten', {locatie: locatie.id, locatieType: locatieType}) }}">{{ locatie }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
