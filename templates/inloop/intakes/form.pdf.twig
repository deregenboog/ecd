{% macro printEmptyTableLine(label, value, type) %}
    <tr>
        <td>{{ label }}</td>
        <td>
            {% if 'janee' == type %}
                <ul style="list-style-type: none;">
                    <li>[ ] Ja</li>
                    <li>[ ] Nee</li>
                </ul>
            {% elseif 'choices_radio' == type %}
                <ul style="list-style-type: none;">
                    {% for choice in value %}
                        <li>( ) {{ choice.label }}</li>
                    {% endfor %}
                </ul>
            {% elseif 'choices_checkboxes' == type %}
                <ul style="list-style-type: none;">
                    {% for choice in value %}
                        <li>[ ] {{ choice.label }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                {{ value|raw }}
            {% endif %}
        </td>
    </tr>
{% endmacro %}

