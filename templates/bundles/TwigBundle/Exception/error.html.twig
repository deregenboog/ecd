{% extends 'base.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block header %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                    data-toggle="collapse" data-target="#navbar-collapse-1"
                    aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ relative_path('/') }}">
                    <img src="{{ asset('img/drg-logo-50px.jpg') }}" alt="Logo DRG">
                </a>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
{% endblock %}

{% block title %}
    Er is een fout opgetreden
{% endblock %}

{% block content %}
    <h1>Er is een fout opgetreden</h1>
    <p>Details:  {{ exception.message }}</p>
    <p>
        Neem contact op met {{ administrator_name }}
        {% set currentPath = app.request.pathInfo %}
        {% set body = "Hi!\n\nIk krijg deze foutmelding:\r\n'" ~ exception.message ~ "'. \r\nDat gebeurt op deze pagina: " ~ currentPath ~ " ." %}
        (<a href="mailto:{{ administrator_email }}?subject=ECD%20foutmelding&body={{ body|url_encode}}">{{ administrator_email }}</a>)
        als dit probleem zich blijft voordoen.
    </p>
{% endblock %}
