{% extends 'base-2-col.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block subnavigation %}
{#    {% include 'app/subnavigation.html.twig' %}#}
{% endblock %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }} {{ entity }}</h1>
    <p>
        {{ html.link('Wijzigen', path(route_base~'edit', {id: entity.id}), 'edit') }}
        {% if is_granted('ROLE_ADMIN') %}
            {{ html.link('Verwijderen', path(route_base~'delete', {id: entity.id}), 'delete') }}
        {% endif %}
    </p>
{% endblock %}

{% block content_left %}
    {% include 'app/vrijwilligers/_persoonsgegevens.html.twig' %}
    {% include 'app/vrijwilligers/_contactgegevens.html.twig' %}

    <h2>Medewerker</h2>
    <dl class="dl-horizontal">
        <dt>Medewerker</dt>
        <dd>{{ entity.medewerker }}</dd>
    </dl>

    <h2>Opmerking</h2>
    <dl class="dl-horizontal">
        <dt>Opmerking</dt>
        <dd>{{ entity.opmerking|nl2br }}</dd>
    </dl>
{% endblock %}

{% block content_right %}
    {% include 'app/vrijwilligers/_diensten.html.twig' %}
    {% include 'app/vrijwilligers/_documenten.html.twig' %}
{% endblock %}
