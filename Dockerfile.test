FROM php:7.4

COPY docker/php.ini /usr/local/etc/php/

RUN apt-get update && apt-get install -y \
    default-mysql-client \
    g++ \
    libfreetype6-dev \
    libicu-dev \
    libldap2-dev \
    libjpeg62-turbo-dev \
    libpng-dev \
    libzip-dev \
    locales \
    zlib1g-dev

RUN docker-php-ext-configure ldap --with-libdir=lib/x86_64-linux-gnu \
    && docker-php-ext-configure gd --with-freetype=/usr/include/ --with-jpeg=/usr/include/ \
    && docker-php-ext-install gd intl ldap mysqli pdo_mysql zip

# set timezone
RUN echo "Europe/Amsterdam" > /etc/timezone && dpkg-reconfigure -f noninteractive tzdata

# install locale
RUN echo "nl_NL.UTF-8 UTF-8" > /etc/locale.gen
RUN locale-gen

WORKDIR /app

COPY composer.json composer.lock composer.phar ./
RUN php composer.phar install --no-autoloader --no-scripts

COPY . .
RUN php composer.phar install

ENV SYMFONY_ENV=test
ENV SYMFONY_DEBUG=1
COPY docker/parameters.test.yml app/config/parameters.yml

ENTRYPOINT [ "php" ]