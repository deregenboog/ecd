{% extends 'base-2-col.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block title %}
    Inloop | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Inloop/subnavigation.html.twig' %}
{% endblock %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }}</h1>
    <p>
        {{ html.link('Printen', path(route_base~'view', {id: entity.id, _format: 'pdf'}), 'print') }}
        {% if is_granted('edit', entity) %}
            {{ html.link('Wijzigen', path(route_base~'edit', {id: entity.id}), 'edit') }}
        {% endif %}
    </p>
{% endblock %}

{% block content_left %}
    {% include 'klant_basis.html.twig' with {klant: entity.klant, module: 'Intake'} %}
{% endblock %}

{% block content_right %}
    {% include '@Inloop/intakes/_detail.html.twig' %}
{% endblock %}
