{% extends '::base-2-col.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Inloophuizen | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Inloop/subnavigation.html.twig' %}
{% endblock %}

{% block content_top %}
    {% if not entity.actief %}
        <div class="alert alert-danger">Dossier is afgesloten</div>
    {% endif %}
    <h1>{{ entity_name|capitalize }} {{ entity }}</h1>
    <p>
        {{ html.link(entity_name|capitalize~' wijzigen', path('inloop_vrijwilligers_edit', {id: entity.id}), 'edit') }}
        {% if entity.actief %}
            {{ html.link(entity_name|capitalize~' afsluiten', path('inloop_vrijwilligers_close', {id: entity.id}), 'close') }}
        {% endif %}
        {% if entity.deletable %}
            {{ html.link(entity_name|capitalize~' verwijderen', path('inloop_vrijwilligers_delete', {id: entity.id}), 'delete') }}
        {% endif %}
    </p>
{% endblock %}

{% block content_left %}
    <dl class="dl-horizontal">
        <dt>#</dt>
        <dd>{{ entity.vrijwilliger.id }}</dd>
        <dt>Naam</dt>
        <dd>{{ entity }}</dd>
        <dt>Medewerker</dt>
        <dd>{{ entity.medewerker }}</dd>
    </dl>
    {% include '::vrijwilliger_basis.html.twig' with {vrijwilliger: entity.vrijwilliger} %}
{% endblock %}

{% block content_right %}
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#memos">Memo's</a></li>
        <li><a data-toggle="tab" href="#documenten">Documenten</a></li>
    </ul>
    <div class="tab-content">
        <div id="memos" class="tab-pane active">
            {% include '@Inloop/memos/_list.html.twig' with {vrijwilliger: entity} %}
        </div>
        <div id="documenten" class="tab-pane">
            {% include '@Inloop/documenten/_list.html.twig' with {vrijwilliger: entity} %}
        </div>
    </div>
{% endblock %}
