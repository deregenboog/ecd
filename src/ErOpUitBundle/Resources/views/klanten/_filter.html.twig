{{ form_start(filter) }}
    <table class="table table-filter">
        {{ colgroup(5) }}
        <thead>
            <tr>
                <th colspan="3">
                </th>
                <th>
                    {{ form_widget(filter.actief) }}
                </th>
                <th>
                    <span class="pull-right">
                        {{ form_widget(filter.filter) }}
                        {{ form_widget(filter.download) }}
                    </span>
                </th>
            </tr>
            <tr>
                <th>
                    {{ form_widget(filter.klant.id) }}
                    {{ form_errors(filter.klant.id) }}
                </th>
                <th>
                    {{ form_widget(filter.klant.naam) }}
                    {{ form_errors(filter.klant.naam) }}
                </th>
                <th>
                    {{ form_widget(filter.inschrijfdatum.start) }}
                    {{ form_errors(filter.inschrijfdatum.start) }}
                    {{ form_widget(filter.inschrijfdatum.end) }}
                    {{ form_errors(filter.inschrijfdatum.end) }}
                </th>
                <th>
                    {{ form_widget(filter.uitschrijfdatum.start) }}
                    {{ form_errors(filter.uitschrijfdatum.start) }}
                    {{ form_widget(filter.uitschrijfdatum.end) }}
                    {{ form_errors(filter.uitschrijfdatum.end) }}
                </th>
                <th>
                    {{ form_widget(filter.klant.stadsdeel) }}
                    {{ form_errors(filter.klant.stadsdeel) }}
                </th>
            </tr>
        </thead>
    </table>
{{ form_end(filter) }}
