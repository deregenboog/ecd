{% extends 'base.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block title %}
    Clip | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Clip/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>{{ entity_name|capitalize }} verwijderen</h1>
    <p>
        Weet u zeker dat u {{ entity_name }}
        {{ html.link(entity, path('clip_vragen_view', {id: entity.id})) }}
        wilt verwijderen?
    </p>
    {{ form(form) }}
{% endblock %}
