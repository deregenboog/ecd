{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Clip | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Clip/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>{{ entity_name|capitalize }} verwijderen</h1>
    <p>
        Weet u zeker dat u deelnemer
        {{ html.link(entity, path('clip_clienten_view', {id: entity.id})) }}
        wilt verwijderen?<br>
    </p>
    {{ form(form) }}
{% endblock %}
