{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Dagbesteding | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Dagbesteding/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Dagdelen invoeren</h1>
    {{ form_start(form) }}
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th colspan="4">
                        <span class="pull-right">
                            {{ form_widget(form.submit1) }}
                        </span>
                    </th>
                </tr>
                <tr>
                    <th>Datum</th>
                    <th>Ochtend</th>
                    <th>Middag</th>
                    <th>Avond</th>
                </tr>
            </thead>
            <tbody>
                {% for datum, dagdeel in form.dagdelen %}
                    <tr>
                        <td>{{ datum }}</td>
                        <td>{{ dagdeel.ochtend is defined ? form_widget(dagdeel.ochtend.aanwezig, {label: false}) }}</td>
                        <td>{{ dagdeel.middag is defined ? form_widget(dagdeel.middag.aanwezig, {label: false}) }}</td>
                        <td>{{ dagdeel.avond is defined ? form_widget(dagdeel.avond.aanwezig, {label: false}) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">
                        <span class="pull-right">
                            {{ form_widget(form.submit2) }}
                        </span>
                    </td>
                </tr>
            </tfoot>
        </table>
    {{ form_end(form) }}
{% endblock %}
