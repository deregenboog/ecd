                {{ html.navLink('Soorten trajecten', path('dagbesteding_trajectsoorten_index'), isActiveRoute('dagbesteding_trajectsoorten_')) }}
                {{ html.navLink('Werklocaties', path('dagbesteding_locaties_index'), isActiveRoute('dagbesteding_locaties_')) }}
            </ul>
        </li>
    {% endif %}
</ul>
