{% import 'html.macro.twig' as html %}
<ol class="breadcrumb">
    <li><a href="{{ path('home') }}">ECD</a></li>
    <li><a href="{{ path('dagbesteding_index') }}">Dagbesteding</a></li>
    <li class="active">{{ title }}</li>
</ol>
<ul class="nav nav-tabs">
    {% if is_granted('ROLE_DAGBESTEDING') %}
        {{ html.navLink('Mijn Dagbesteding', path('dagbesteding_dashboard_index'), isActiveRoute('dagbesteding_dashboard_')) }}
        {{ html.navLink('Deelnemers', path('dagbesteding_deelnemers_index'), isActiveRoute('dagbesteding_deelnemers_')) }}
    {% endif %}
    {{ html.navLink('Trajecten', path('dagbesteding_trajecten_index'), isActiveRoute('dagbesteding_trajecten_')) }}
