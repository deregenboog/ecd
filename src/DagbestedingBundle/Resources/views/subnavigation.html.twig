    {% endif %}
    {% if is_granted('ROLE_DAGBESTEDING_BEHEER') %}
        <li role="presentation" class="dropdown {{ isActivePath('dagbesteding/admin') ? 'active' }}">
            <a class="dropdown-toggle active" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                Beheer <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                {{ html.navLink('Afsluitingen deelnemers', path('dagbesteding_deelnemerafsluitingen_index'), isActiveRoute('dagbesteding_deelnemerafsluitingen_')) }}
                {{ html.navLink('Afsluitingen trajecten', path('dagbesteding_trajectafsluitingen_index'), isActiveRoute('dagbesteding_trajectafsluitingen_')) }}
