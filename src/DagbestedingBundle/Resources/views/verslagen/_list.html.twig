<h2>Verslagen</h2>
<p>
    {% if deelnemer is defined %}
        {% set url = path('dagbesteding_verslagen_add', {deelnemer: deelnemer.id, redirect: app.request.get('url')}) %}
    {% endif %}
    {{ html.addLink(url) }}
    {{ html.link('Verslag toevoegen', url) }}
</p>
<table class="table">
    {% for verslag in entity.verslagen %}
        <tr>
            <td>{{ verslag.datum|date('d-m-Y') }}</td>
            <td>{{ verslag.medewerker }}</td>
            <td>{{ verslag.opmerking|nl2br }}</td>
            <td>
                {{ html.editLink(path('dagbesteding_verslagen_edit', {id: verslag.id, redirect: app.request.get('url')})) }}
                {{ html.deleteLink(path('dagbesteding_verslagen_delete', {id: verslag.id, redirect: app.request.get('url')})) }}
            </td>
        </tr>
    {% endfor %}
</table>
