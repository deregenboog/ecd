{% extends '::base-2-col.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Homeservice | Facturen |
{% endblock %}

{% block subnavigation %}
    {% include '@Hs/hs_subnavigation.html.twig' %}
{% endblock %}

{% block content_left %}
    <h1>Factuur {{ entity }}</h1>
    <p>
        {{ html.viewLink(path('hs_facturen_view', {id: entity.id, _format: 'pdf'})) }}
        {{ html.link('PDF downloaden', path('hs_facturen_view', {id: entity.id, _format: 'pdf'})) }}
        {% if entity.deletable %}
            {{ html.deleteLink(path('hs_facturen_delete', {id: entity.id})) }}
            {{ html.link('Factuur verwijderen', path('hs_facturen_delete', {id: entity.id})) }}
        {% endif %}
    </p>
    <dl class="dl-horizontal">
        <dt>#</dt>
        <dd>{{ entity.nummer }}</dd>
        <dt>Betreft</dt>
        <dd>{{ entity.betreft }}</dd>
        <dt>Datum</dt>
        <dd>{{ entity.datum|date('d-m-Y') }}</dd>
        <dt>Klant</dt>
        <dd>{{ html.link(entity.klant, path('hs_klanten_view', {id: entity.klant.id})) }}</dd>
        <dt>Totaal</dt>
        <dd>{{ entity.bedrag|money }}</dd>
        <dt>Betaald</dt>
        <dd>{{ entity.betaald|money }}</dd>
        <dt>Saldo</dt>
        <dd>{{ entity.saldo|money }}</dd>
    </dl>
    {% include '@Hs/registraties/_list.html.twig' %}
    {% include '@Hs/declaraties/_list.html.twig' %}
{% endblock %}

{% block content_right %}
    {% include '@Hs/betalingen/_list.html.twig' with {add_url: path('hs_betalingen_add', {factuurId: entity.id})} %}
{% endblock %}
