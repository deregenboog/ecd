{% extends '::base-2-col.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    ODP | Vrijwilligers |
{% endblock %}

{% block subnavigation %}
    {% include '@Hs/hs_subnavigation.html.twig' %}
{% endblock %}

{% block content_left %}
    <h1>Vrijwilliger: {{ entity }}</h1>
    <p>
        {{ html.editLink(path('hs_vrijwilligers_edit', {id: entity.id})) }}
        {{ html.link('Wijzigen', path('hs_vrijwilligers_edit', {id: entity.id})) }}
        {% if entity.deletable %}
            {{ html.deleteLink(path('hs_vrijwilligers_delete', {id: entity.id})) }}
            {{ html.link('Verwijderen', path('hs_vrijwilligers_delete', {id: entity.id})) }}
        {% endif %}
    </p>
    <dl class="dl-horizontal">
        <dt>#</dt>
        <dd>{{ entity.id }}</dd>
        <dt>Naam</dt>
        <dd>{{ entity }}</dd>
        <dt>Dragend</dt>
        <dd>{{ entity.dragend ? 'Ja' : 'Nee' }}</dd>
        <dt>Rijbewijs</dt>
        <dd>{{ entity.rijbewijs ? 'Ja' : (entity.rijbewijs is null ? 'Onbekend' : 'Nee') }}</dd>
    </dl>
    {% include '@Hs/klussen/_list.html.twig' %}
{% endblock %}

{% block content_right %}
    {% include '@Hs/memos/_list.html.twig' with {add_url: path('hs_vrijwilligers_memos_add', {id: entity.id})} %}
    {% include '@Hs/documenten/_list.html.twig' with {add_url: path('hs_vrijwilligers_documenten_add', {id: entity.id})} %}
{% endblock %}
