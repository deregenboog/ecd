{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
   Prestatiecijfers | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@App/rapportages/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>{{ entity_name|capitalize }} toevoegen</h1>
    {{ form(form) }}
{% endblock %}

{% block scripts %}
    <script>
    var $repo = $('#prestatie_repository');


    $repo.change(function() {
        // ... retrieve the corresponding form.
        var $form = $(this).closest('form');
        // Simulate form data, but only include the selected repository value.
        var data = {};
        data[$repo.attr('name')] = $repo.val();
        console.log(data);
        // Submit data via AJAX to the form's action path.
        $.ajax({
            url : $form.attr('action'),
            type: $form.attr('method'),
            data : data,
            success: function(html) {
                // Replace current position field ...
                $('#prestatie_kpi').replaceWith(
                    // ... with the returned one from the AJAX response.
                    $(html).find('#prestatie_kpi')
                );
            // kpi field now displays the appropriate kpi.
            }
        });
    });
    </script>
{% endblock %}