{% extends 'base.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content_top %}
    <h1>
        {% if 'Vog' == class(entity, false) %}
            {{ class(entity, false)|upper }} toevoegen
        {% else %}
            {{ class(entity, false)|capitalize }} toevoegen
        {% endif %}
    </h1>
    <p>
        {{ html.cancelLink(path(route_base~'index')) }}
        {{ html.link('Annuleren', path(route_base~'index')) }}
    </p>
{% endblock %}

{% block content %}
    {{ form(form) }}
{% endblock %}
