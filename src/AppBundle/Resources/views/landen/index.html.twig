{% extends 'base.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>
    <p>
        {{ html.addLink(path(route_base~'add')) }}
        {{ html.link(entity_name|capitalize~' toevoegen', path(route_base~'add')) }}
    </p>
    <table class="table table-hover">
        <thead>
            {{ form_start(filter) }}
                <tr>
                    <th>
                        {{ form_widget(filter.naam) }}
                        {{ form_errors(filter.naam) }}
                    </th>
                    <th>
                        <span class="pull-right">
                            {{ form_widget(filter.filter) }}
                        </span>
                    </th>
                </tr>
            {{ form_end(filter) }}
            <tr>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Land', 'land.land') }}
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for land in pagination %}
            <tr>
                <td>
                    {{ land.naam }}
                </td>
                <td>
                    {{ html.editLink(path('app_landen_edit', {id: land.id})) }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <p>
        {{ knp_pagination_render(pagination) }}
    </p>
{% endblock %}
