{% extends 'IzBundle:klanten:view.html.twig' %}

{% set entity = parent_entity %}

{% block content_right %}
    {% include 'IzBundle:klanten:_tabs.html.twig' with {klant: entity, current: 'koppelingen'} %}
    <div class="tab-content">
        <div id="koppelingen" class="tab-pane active">
        <h2>Hulpvraag toevoegen</h2>
        <p>
            {{ html.cancelLink(path('iz_klanten_view', {id: entity.id})) }}
            {{ html.link('Annuleren', path('iz_klanten_view', {id: entity.id})) }}
        </p>
        {{ form(form) }}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript">
        $(function() {
            // copy title from input to label
            $('input[type="radio"], input[type="checkbox"]').each(function() {
                if ($(this).attr('title')) {
                    $(this).closest('label').attr('title', $(this).attr('title'));
                }
            });
        });
    </script>
{% endblock %}
