{% extends 'IzBundle::view.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }} {{ entity.izKlant }} {{ entity.hulpaanbod.izVrijwilliger }}</h1>
{% endblock %}

{% block content_left %}
    <h2>Koppeling</h2>
    <p>
        {{ html.editLink(path('iz_koppelingen_edit', {id: entity.id})) }}
        {{ html.link('Bewerken', path('iz_koppelingen_edit', {id: entity.id})) }}
    </p>
    <dl class="dl-horizontal">
        <dt>Startdatum koppeling</dt>
        <dd>{{ entity.koppelingStartdatum ? entity.koppelingStartdatum|date('d-m-Y') }}</dd>
        <dt>Datum tussenevaluatie</dt>
        <dd>{{ entity.tussenevaluatiedatum ? entity.tussenevaluatiedatum|date('d-m-Y') }}</dd>
        <dt>Datum eindevaluatie</dt>
        <dd>{{ entity.eindevaluatiedatum ? entity.eindevaluatiedatum|date('d-m-Y') }}</dd>
        <dt>Einddatum koppeling</dt>
        <dd>{{ entity.koppelingEinddatum ? entity.koppelingEinddatum|date('d-m-Y') }}</dd>
    </dl>
{% endblock %}

{% block content_right %}
    <h2>Hulpvraag</h2>
    {{ html.viewLink(path('iz_hulpvragen_view', {id: entity.id})) }}
    {{ html.link('Bekijken', path('iz_hulpvragen_view', {id: entity.id})) }}
    <dl class="dl-horizontal">
        <dt>Deelnemer</dt>
        <dd>{{ entity.izKlant }}</dd>
        <dt>Coördinator</dt>
        <dd>{{ entity.medewerker }}</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Startdatum</dt>
        <dd>{{ entity.startdatum|date('d-m-Y') }}</dd>
        <dt>Project</dt>
        <dd>{{ entity.project }}</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Hulpvraagsoort</dt>
        <dd>{{ entity.hulpvraagsoort }}</dd>
        <dt>Doelgroepen</dt>
        <dd>
            <ul>
                {% for doelgroep in entity.doelgroepen %}
                    <li>{{ doelgroep }}</li>
                {% endfor %}
            </ul>
        </dd>
    </dl>
    <h2>Hulpaanbod</h2>
    {{ html.viewLink(path('iz_hulpaanbiedingen_view', {id: entity.hulpaanbod.id})) }}
    {{ html.link('Bekijken', path('iz_hulpaanbiedingen_view', {id: entity.hulpaanbod.id})) }}
    <dl class="dl-horizontal">
        <dt>Vrijwilliger</dt>
        <dd>{{ entity.hulpaanbod.izVrijwilliger }}</dd>
        <dt>Coördinator</dt>
        <dd>{{ entity.medewerker }}</dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Startdatum</dt>
        <dd>{{ entity.startdatum|date('d-m-Y') }}</dd>
        <dt>Project</dt>
        <dd>{{ entity.project }}</dd>
    </dl>
{% endblock %}
