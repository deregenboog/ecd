{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}
{% import _self as iz %}

{% block title %}
    Informele Zorg | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Iz/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <span class="pull-right">
        {{ form(medewerker_filter) }}
    </span>
    <h1>{{ title }}</h1>
    <ul class="nav nav-tabs">
        <li class="active"><a href="{{ path('iz_dashboard_koppelingen', {medewerker: medewerker_filter.vars.value}) }}">Lopende koppelingen</a></li>
        <li><a href="{{ path('iz_dashboard_hulpvragen', {medewerker: medewerker_filter.vars.value}) }}">Open hulpvragen</a></li>
        <li><a href="{{ path('iz_dashboard_hulpaanbiedingen', {medewerker: medewerker_filter.vars.value}) }}">Open hulpaanbiedingen</a></li>
    </ul>
    <div class="tab-content">
        <div id="hulpvragen" class="tab-pane">
        </div>
        <div id="hulpaanbiedingen" class="tab-pane">
        </div>
        <div id="koppelingen" class="tab-pane active">
            <h2>Lopende koppelingen</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        {{ form_start(filter) }}
                            <tr>
                                <th colspan="9">
                                    <span class="pull-right">
                                        {{ form_widget(filter.filter) }}
                                        {{ form_widget(filter.download) }}
                                    </span>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    {{ form_widget(filter.klant.voornaam) }}
                                    {{ form_errors(filter.klant.voornaam) }}
                                    {{ form_widget(filter.klant.achternaam) }}
                                    {{ form_errors(filter.klant.achternaam) }}
                                </th>
                                <th>
                                    {{ form_widget(filter.vrijwilliger.voornaam) }}
                                    {{ form_errors(filter.vrijwilliger.voornaam) }}
                                    {{ form_widget(filter.vrijwilliger.achternaam) }}
                                    {{ form_errors(filter.vrijwilliger.achternaam) }}
                                </th>
                                <th>
                                    {{ form_widget(filter.project) }}
                                    {{ form_errors(filter.project) }}
                                </th>
                                <th>
                                    {{ form_widget(filter.koppelingStartdatum) }}
                                    {{ form_errors(filter.koppelingStartdatum) }}
                                </th>
                                <th>
                                    {{ form_widget(filter.klant.stadsdeel) }}
                                    {{ form_errors(filter.klant.stadsdeel) }}
                                </th>
                                <th>
                                </th>
                                <th>
                                </th>
                                <th>
                                </th>
                                <th>
                                </th>
                            </tr>
                        {{ form_end(filter) }}
                    </tr>
                    <tr>
                        <th>
                            {{ knp_pagination_sortable(pagination, 'Deelnemer', 'klant.achternaam') }}
                        </th>
                        <th>
                            {{ knp_pagination_sortable(pagination, 'Vrijwilliger', 'vrijwilliger.achternaam') }}
                        </th>
                        <th>
                            {{ knp_pagination_sortable(pagination, 'Project', 'project.naam') }}
                        </th>
                        <th>
                            {{ knp_pagination_sortable(pagination, 'Startdatum koppeling', 'hulpvraag.koppelingStartdatum') }}
                        </th>
                        <th>
                            {{ knp_pagination_sortable(pagination, 'Werkgebied', 'werkgebied.naam') }}
                        </th>
                        <th>
                            Laatste verslag
                        </th>
                        <th>
                            Invervisiegroep(en) VW
                        </th>
                        <th>
                            {{ knp_pagination_sortable(pagination, 'Tussenevaluatie', 'hulpvraag.tussenevaluatiedatum') }}
                        </th>
                        <th>
                            {{ knp_pagination_sortable(pagination, 'Eindevaluatie', 'hulpvraag.eindevaluatiedatum') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for hulpvraag in pagination %}
                        <tr data-href="{{ path('cake_iz_hulpvragen_view', {iz_klant_id: hulpvraag.izKlant.id}) }}" style="{{ iz.koppeling_warning_style(hulpvraag) }}">
                            <td>
                                {{ hulpvraag.izKlant.klant.naam }}
                            </td>
                            <td>
                                {{ hulpvraag.hulpaanbod.izVrijwilliger.vrijwilliger.naam }}
                            </td>
                            <td>
                                {{ hulpvraag.project }}
                            </td>
                            <td>
                                {{ hulpvraag.koppelingStartdatum|date('d-m-Y') }}
                            </td>
                            <td>
                                {{ hulpvraag.izKlant.klant.werkgebied }}
                            </td>
                            <td>
                                {{ iz.koppeling_laatste_verslag(hulpvraag) }}
                            </td>
                            <td>
                                <ul>
                                    {% for intervisiegroep in hulpvraag.hulpaanbod.izVrijwilliger.intervisiegroepen %}
                                        <li>{{ intervisiegroep }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                {{ hulpvraag.tussenevaluatiedatum ? hulpvraag.tussenevaluatiedatum|date('d-m-Y') }}
                            </td>
                            <td>
                                {{ hulpvraag.eindevaluatiedatum ? hulpvraag.eindevaluatiedatum|date('d-m-Y') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript">
        $(function() {
            // make table rows clickable
            $('form #medewerker').change(function() {
                $(this).closest('form').submit();
            });
        });
    </script>
{% endblock %}

{% macro koppeling_warning_style(hulpvraag) %}
    {% if hulpvraag.koppelingStartdatum|date('Y') >= 2018 %}
        {% if hulpvraag.koppelingStartdatum|date_modify('+6 months') < today %}
            {{ 'background-color: red; color: white' }}
        {% elseif hulpvraag.koppelingStartdatum|date_modify('+5 months +2 weeks') < today %}
            {{ 'background-color: orange; color: white' }}
        {% endif %}
    {% endif %}
{% endmacro %}

{% macro koppeling_laatste_verslag(hulpvraag) %}
    {% set dateHulpvraag = false %}
    {% set dateHulpaanbod = false %}
    {% if hulpvraag.verslagen|length > 0 %}
        {% set dateHulpvraag = hulpvraag.verslagen.0.created %}
    {% endif %}
    {% if hulpvraag.hulpaanbod.verslagen|length > 0 %}
        {% set dateHulpaanbod = hulpvraag.hulpaanbod.verslagen.0.created %}
    {% endif %}
    {% if dateHulpvraag and dateHulpaanbod %}
        {{ dateHulpvraag > dateHulpaanbod ? dateHulpvraag|date('d-m-Y') : dateHulpaanbod|date('d-m-Y') }}
    {% else %}
        {{ dateHulpvraag ? dateHulpvraag|date('d-m-Y') : dateHulpaanbod|date('d-m-Y') }}
    {% endif %}
{% endmacro %}
