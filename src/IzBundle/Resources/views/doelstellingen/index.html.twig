{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Informele Zorg | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Iz/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Doelstellingen</h1>
    <p>
        {{ html.addLink(path('iz_doelstellingen_add')) }}
        {{ html.link('Doelstellingen toevoegen', path('iz_doelstellingen_add')) }}
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                {{ form_start(filter) }}
                <th>
                    {{ form_widget(filter.jaar) }}
                    {{ form_errors(filter.jaar) }}
                </th>
                <th>
                    {{ form_widget(filter.project) }}
                    {{ form_errors(filter.project) }}
                </th>
                <th>
                    {{ form_widget(filter.organisatiebreed) }}
                    {{ form_errors(filter.organisatiebreed) }}
                </th>
                <th>
                    {{ form_widget(filter.stadsdeel) }}
                    {{ form_errors(filter.stadsdeel) }}
                </th>
                <th>
                </th>
                <th>
                    {{ form_widget(filter.filter) }}
                    {{ form_widget(filter.download) }}
                </th>
                {{ form_end(filter) }}
            </tr>
            <tr>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Jaar', 'doelstelling.jaar') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Project', 'project.naam') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Organisatiebreed', 'stadsdeel.naam') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Stadsdeel', 'stadsdeel.naam') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Prestatiecijfer', 'doelstelling.aantal') }}
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for doelstelling in pagination %}
            <tr>
                <td>
                    {{ doelstelling.jaar }}
                </td>
                <td>
                    {{ doelstelling.project }}
                </td>
                <td>
                    {{ doelstelling.stadsdeel ? 'Nee' : 'Ja' }}
                </td>
                <td>
                    {{ doelstelling.stadsdeel }}
                </td>
                <td>
                    {{ doelstelling.aantal }}
                </td>
                <td>
                    {{ html.editLink(path('iz_doelstellingen_edit', {id: doelstelling.id})) }}
                    {{ html.deleteLink(path('iz_doelstellingen_delete', {id: doelstelling.id})) }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
{% endblock %}
