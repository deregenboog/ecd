{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Op Eigen Kracht | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Oek/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Vrijwilliger wijzigen</h1>
    <p>
        Hier kunt u alleen de Op Eigen Kracht-gegevens voor deze {{ entity_name }} wijzigen.
        Klik {{ html.link('hier', path('oek_vrijwilligers_view', {id: entity.vrijwilliger.id })) }}
        om naar het basisdossier van deze {{ entity_name }} te gaan.
    </p>
    {{ form(form) }}
{% endblock %}
