{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Tijdelijk Wonen | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Odp/odp_subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>
    <p>
        {{ html.addLink(path('odp_verhuurders_add')) }}
        {{ html.link('Verhuurder toevoegen', path('odp_verhuurders_add')) }}
    </p>
    <table class="table table-hover">
        <thead>
            {{ form_start(filter) }}
                <tr>
                    <th colspan="8">
                    </th>
                    <th>
                        {{ form_widget(filter.actief) }}
                    </th>
                    <th>
                        <span class="pull-right">
                            {{ form_widget(filter.filter) }}
                            {{ form_widget(filter.download) }}
                        </span>
                    </th>
                </tr>
                <tr>
                    <th>
                        {{ form_widget(filter.klant.id) }}
                        {{ form_errors(filter.klant.id) }}
                    </th>
                    <th>
                        {{ form_widget(filter.klant.naam) }}
                        {{ form_errors(filter.klant.naam) }}
                    </th>
                    <th>
                        {{ form_widget(filter.project) }}
                        {{ form_errors(filter.project) }}
                    </th>
                    <th>
                        {{ form_widget(filter.wpi) }}
                        {{ form_errors(filter.wpi) }}
                    </th>
                    <th>
                        {{ form_widget(filter.ksgw) }}
                        {{ form_errors(filter.ksgw) }}
                    </th>
                    <th>
                        {{ form_widget(filter.klant.stadsdeel) }}
                        {{ form_errors(filter.klant.stadsdeel) }}
                    </th>
                    <th>
                        {{ form_widget(filter.aanmelddatum.start) }}
                        {{ form_errors(filter.aanmelddatum.start) }}
                        {{ form_widget(filter.aanmelddatum.end) }}
                        {{ form_errors(filter.aanmelddatum.end) }}
                    </th>
                    <th>
                        {{ form_widget(filter.afsluitdatum.start) }}
                        {{ form_errors(filter.afsluitdatum.start) }}
                        {{ form_widget(filter.afsluitdatum.end) }}
                        {{ form_errors(filter.afsluitdatum.end) }}
                    </th>

                    <th>
                    </th>
                    <th>
                        {{ form_widget(filter.ambulantOndersteuner) }}
                        {{ form_errors(filter.ambulantOndersteuner) }}
                    </th>
                </tr>
            {{ form_end(filter) }}
            <tr>
                <th>
                    {{ knp_pagination_sortable(pagination, '#', 'klant.id') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Verhuurder', 'klant.achternaam') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Project', 'project.naam') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'WPI', 'verhuurder.wpi') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'KSGW', 'verhuurder.ksgw') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Stadsdeel', 'werkgebied.naam') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Aanmelddatum', 'verhuurder.aanmelddatum') }}
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Afsluitdatum dossier', 'verhuurder.afsluitdatum') }}
                </th>
                <th>
                </th>
                <th>
                    {{ knp_pagination_sortable(pagination, 'Ambulant ondersteuner', 'ambulantOndersteuner.achternaam') }}
                </th>
            </tr>
        </thead>
        <tbody>
            {% for verhuurder in pagination %}
                <tr data-href="{{ path(route_base~'view', {id: verhuurder.id}) }}">
                    <td>
                        {{ verhuurder.klant.id }}
                    </td>
                    <td>
                        {{ verhuurder.klant.naam }}
                    </td>
                    <td>
                        {{ verhuurder.project }}
                    </td>
                    <td>
                        {{ verhuurder.wpi ? 'Ja' : 'Nee' }}
                    </td>
                    <td>
                        {{ verhuurder.ksgw ? 'Ja' : 'Nee' }}
                    </td>
                    <td>
                        {{ verhuurder.klant.werkgebied }}
                    </td>
                    <td>
                        {{ verhuurder.aanmelddatum ? verhuurder.aanmelddatum|date('d-m-Y') }}
                    </td>
                    <td>
                        {{ verhuurder.afsluitdatum ? verhuurder.afsluitdatum|date('d-m-Y') }}
                        {{ verhuurder.afsluiting ? '('~verhuurder.afsluiting~')' }}
                    </td>
                    <td>

                        {{ html.editLink(path('odp_verhuurders_edit', {'id': verhuurder.id}))}}
                        {% if verhuurder.deletable %}
                            {{ html.deleteLink(path('odp_verhuurders_delete', {'id': verhuurder.id}))}}
                        {% endif %}
                    </td>
                    <td>
                        {{ verhuurder.ambulantOndersteuner ? verhuurder.ambulantOndersteuner.naam : '' }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <p>
        {{ knp_pagination_render(pagination) }}
    </p>
{% endblock %}
