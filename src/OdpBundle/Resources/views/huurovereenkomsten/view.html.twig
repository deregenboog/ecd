{% extends '::base-2-col.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Onder de Pannen | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Odp/odp_subnavigation.html.twig' %}
{% endblock %}

{% block content_top %}
    {% set reservering = "" %}
    {% if entity.isReservering %}
        {% set reservering = "<span class='text-danger'> ! Reservering</span>"  %}
    {% endif %}
    <h1>Koppeling {{ entity }}{{ reservering|raw }}</h1>
    <p>
        {% if entity.actief %}
            {{ html.editLink(path('odp_huurovereenkomsten_edit', {id: entity.id})) }}
            {{ html.link('Wijzigen', path('odp_huurovereenkomsten_edit', {id: entity.id})) }}
            {{ html.closeLink(path('odp_huurovereenkomsten_close', {id: entity.id})) }}
            {{ html.link('Afsluiten', path('odp_huurovereenkomsten_close', {id: entity.id})) }}
            {% if entity.isReservering == true %}

                {{ html.link('Reservering verwijderen', path('odp_huurovereenkomsten_delete', {id: entity.id})) }}

            {% endif %}
        {% else %}
            {{ html.addLink(path('odp_huurovereenkomsten_reopen', {id: entity.id})) }}
            {{ html.link('Heropenen', path('odp_huurovereenkomsten_reopen', {id: entity.id})) }}
        {% endif %}
        {% if entity.deletable %}
            {{ html.deleteLink(path('odp_huurovereenkomsten_delete', {id: entity.id})) }}
            {{ html.link('Verwijderen', path('odp_huurovereenkomsten_delete', {id: entity.id})) }}
        {% endif %}
    </p>
{% endblock %}

{% block content_left %}

    <dl class="dl-horizontal">
        <dt>#</dt>
        <dd>{{ entity.id }}</dd>
        <dt>Huurder</dt>
        <dd>{{ html.link(entity.huurder.klant, path('odp_huurders_view', {id: entity.huurder.id})) }}</dd>
        <dt>Verhuurder</dt>
        <dd>{{ html.link(entity.verhuurder.klant, path('odp_verhuurders_view', {id: entity.verhuurder.id})) }}</dd>
        <dt>Huurverzoek</dt>
        <dd>{{ html.link(entity.huurverzoek, path('odp_huurverzoeken_view', {id: entity.huurverzoek.id})) }}</dd>
        <dt>Huuraanbod</dt>
        <dd>{{ html.link(entity.huuraanbod, path('odp_huuraanbiedingen_view', {id: entity.huuraanbod.id})) }}</dd>
        <dt>Startdatum</dt>
        <dd>{{ entity.startdatum|date('d-m-Y') }}</dd>
        <dt>Opzegdatum</dt>
        <dd>
            {% if entity.opzegdatum %}
                {% set color = entity.opzegdatum < today and not entity.opzegbriefVerstuurd ? 'red' : 'black' %}
                <span style="color:{{ color }};">
                    {{ entity.opzegdatum|date('d-m-Y') }}
                </span>
            {% endif %}
        </dd>
        <dt>Opzegbrief verstuurd</dt>
        <dd>{{ entity.opzegbriefVerstuurd ? 'Ja' : 'Nee' }}</dd>
        <dt>Einddatum</dt>
        <dd>{{ entity.einddatum ? entity.einddatum|date('d-m-Y') }}</dd>
        <dt>Vorm</dt>
        <dd>{{ entity.vorm }}</dd>
        <dt>Afsluitdatum</dt>
        <dd>{{ entity.afsluitdatum ? entity.afsluitdatum|date('d-m-Y') }}</dd>
        <dt>Reden afsluiting</dt>
        <dd>{{ entity.afsluiting ? entity.afsluiting }}</dd>
    </dl>
{% endblock %}

{% block content_right %}
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#verslagen">Verslagen</a></li>
        <li><a data-toggle="tab" href="#documenten">Documenten</a></li>
        <li><a data-toggle="tab" href="#financieel">Financieel</a></li>
    </ul>
    <div class="tab-content">
        <div id="verslagen" class="tab-pane active">
            {% include 'OdpBundle:verslagen:_list.html.twig' with {huurovereenkomst: entity} %}
            {% include 'OdpBundle:verslagen:_list.html.twig' with {huurverzoek: entity.huurverzoek, list_title: 'Verslagen huurverzoek'} %}
            {% include 'OdpBundle:verslagen:_list.html.twig' with {huuraanbod: entity.huuraanbod, list_title: 'Verslagen huuraanbod'} %}
        </div>
        <div id="documenten" class="tab-pane">
            {% include 'OdpBundle:documenten:_list.html.twig' with {huurovereenkomst: entity} %}
        </div>
        <div id="financieel" class="tab-pane">
            {% include 'OdpBundle:financiele_verslagen:_list.html.twig' with {huurovereenkomst: entity} %}
            {% include 'OdpBundle:financiele_documenten:_list.html.twig' with {huurovereenkomst: entity} %}
        </div>
    </div>
{% endblock %}
