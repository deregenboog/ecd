        </tr>
        {% for huurovereenkomst in verhuurder.huurovereenkomsten %}
            <tr>
                <td>{{ huurovereenkomst.huurder }}</td>
                <td>
                    {{ huurovereenkomst.startdatum ? huurovereenkomst.startdatum|date('d-m-Y') }}
                </td>
                <td>
                    {{ huurovereenkomst.opzegdatum ? huurovereenkomst.opzegdatum|date('d-m-Y') }}
                </td>
                <td>
                    {{ huurovereenkomst.einddatum ? huurovereenkomst.einddatum|date('d-m-Y') }}
                </td>
                <td>
                    {{ huurovereenkomst.afsluitdatum ? huurovereenkomst.afsluitdatum|date('d-m-Y') }}
                </td>
                <td>
                    {{ html.viewlink(path('odp_huurovereenkomsten_view', {id: huurovereenkomst.id})) }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
