{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Tijdelijk Wonen | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Odp/odp_subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>

    <table class="table table-hover">
        {{ form_start(filter) }}
            <tr>
                <th colspan="7">
                </th>

                <th>
                    <span class="pull-right">
                        {{ form_widget(filter.filter) }}
                        {{ form_widget(filter.download) }}
                    </span>
                </th>
                <th></th>
            </tr>
            <tr>
                <th>
                    {{ form_widget(filter.id) }}
                    {{ form_errors(filter.id) }}
                </th>
                <th>
                    {{ form_widget(filter.klant.naam) }}
                    {{ form_errors(filter.klant.naam) }}
                </th>
                <th>
                    {{ form_widget(filter.klant.stadsdeel) }}
                    {{ form_errors(filter.klant.stadsdeel) }}
                </th>
                <th>
                    {{ form_widget(filter.project) }}
                    {{ form_errors(filter.project) }}
                </th>
                <th>
                    {{ form_widget(filter.startdatum.start) }}
                    {{ form_errors(filter.startdatum.start) }}
                    {{ form_widget(filter.startdatum.end) }}
                    {{ form_errors(filter.startdatum.end) }}
                </th>
                <th>
                    {{ form_widget(filter.afsluitdatum.start) }}
                    {{ form_errors(filter.afsluitdatum.start) }}
                    {{ form_widget(filter.afsluitdatum.end) }}
                    {{ form_errors(filter.afsluitdatum.end) }}
                </th>
                <th>
                    {{ form_widget(filter.medewerker) }}
                    {{ form_errors(filter.medewerker) }}
                </th>
                <th>
                    {{ form_widget(filter.huurovereenkomst.isReservering) }}
                    {{ form_errors(filter.huurovereenkomst.isReservering) }}
                </th>
                <th>
                </th>
            </tr>
        {{ form_end(filter) }}
        <tr>
            <th>
                {{ knp_pagination_sortable(pagination, '#', 'huuraanbod.id') }}
            </th>
            <th>
                {{ knp_pagination_sortable(pagination, 'Verhuurder', 'klant.achternaam') }}
            </th>
            <th>
                {{ knp_pagination_sortable(pagination, 'Stadsdeel', 'werkgebied.naam') }}
            </th>
            <th>
                {{ knp_pagination_sortable(pagination, 'Project', 'project.naam') }}
            </th>
            <th>
                {{ knp_pagination_sortable(pagination, 'Startdatum', 'huuraanbod.startdatum') }}
            </th>
            <th>
                {{ knp_pagination_sortable(pagination, 'Afsluitdatum', 'huuraanbod.afsluitdatum') }}
            </th>
            <th>
                {{ knp_pagination_sortable(pagination, 'Medewerker', 'medewerker.achternaam') }}
            </th>
            <th>
                {{ knp_pagination_sortable(pagination, 'Reservering', 'huurovereenkomst.isReservering') }}
            </th>
            <th>
            </th>
        </tr>
        {% for huuraanbod in pagination %}
            {% set cssClass = "" %}
            {% set class= "" %}

            {% if huuraanbod.datumTOestemmingToegekend is not empty and date(huuraanbod.datumToestemmingToegekend) < date() %}
                {% set cssClass = "success" %}
            {% endif %}

            {% if huuraanbod.huurovereenkomst is not null and huuraanbod.huurovereenkomst.isReservering == true %}
                {% set class = "danger" %}
            {% endif %}
            <tr class="{{ cssClass }} {{ class }}" data-href="{{ path('odp_huuraanbiedingen_view', {id: huuraanbod.id}) }}">
                <td>
                    {{ huuraanbod.id }}
                </td>
                <td>
                    {{ huuraanbod.verhuurder.klant.naam }}
                </td>
                <td>
                    {{ huuraanbod.verhuurder.klant.werkgebied }}
                </td>
                <td>
                    {{ huuraanbod.project }}
                </td>
                <td>
                    {{ huuraanbod.startdatum|date('d-m-Y') }}
                </td>
                <td>
                    {{ huuraanbod.afsluitdatum ? huuraanbod.afsluitdatum|date('d-m-Y') }}
                    {{ huuraanbod.afsluiting ? '('~huuraanbod.afsluiting~')' }}
                </td>
                <td>
                    {{ huuraanbod.medewerker }}
                </td>
                <td>
                    {{ huuraanbod.huurovereenkomst ? huuraanbod.huurovereenkomst.isReservering|ja_nee : "Nee" }}
                </td>
                <td>
                    {{ html.editLink(path('odp_huuraanbiedingen_edit', {id: huuraanbod.id})) }}
                    {% if huuraanbod.deletable %}
                        {{ html.deleteLink(path('odp_huuraanbiedingen_delete', {id: huuraanbod.id})) }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>

    <p>
        {{ knp_pagination_render(pagination) }}
    </p>
{% endblock %}
