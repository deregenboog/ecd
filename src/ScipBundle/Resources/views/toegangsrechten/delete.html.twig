{% extends 'base.html.twig' %}
{% import 'html.macro.twig' as html %}

{% block title %}
    SCIP | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Scip/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>{{ entity_name|capitalize }} verwijderen</h1>
    <p>
        {{ html.link('Annuleren', path(route_base~'index'), 'cancel') }}
    </p>
    <p>
        Weet u zeker dat u de toegangsrechten voor <strong>{{ entity.medewerker }}</strong> wilt verwijderen?<br>
        {{ form(form) }}
    </p>
{% endblock %}
