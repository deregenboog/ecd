{% extends '::base-2-col.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    SCIP | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Scip/subnavigation.html.twig' %}
{% endblock %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }} {{ entity }}</h1>
    <p>
        {{ html.link('Wijzigen', path(route_base~'edit', {id: entity.id}), 'edit') }}
    </p>
{% endblock %}

{% block content_left %}
    <dl class="dl-horizontal">
        <dt>Naam</dt>
        <dd>{{ entity.naam }}</dd>
        <dt>KPL</dt>
        <dd>{{ entity.kpl }}</dd>
        <dt>Actief</dt>
        <dd>{{ entity.actief|ja_nee }}</dd>
    </dl>
{% endblock %}

{% block content_right %}
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#deelnemers">Vrijwilligers</a></li>
        <li><a data-toggle="tab" href="#deelnemers">Gebruikers</a></li>
    </ul>
    <div class="tab-content">
        <div id="deelnemers" class="tab-pane active">
            <h2>Vrijwilligers</h2>
            <p>
                {{ html.link('Toevoegen', path('scip_deelnames_add', {project: entity.id}), 'add') }}
            </p>
            {% include '@Scip/deelnames/_list.html.twig' %}
        </div>
        <div id="verslagen" class="tab-pane">
            <h2>Verslagen</h2>
        </div>
        <div id="documenten" class="tab-pane">
            <h2>Documenten</h2>
            <p>
                {{ html.link('Toevoegen', path('scip_documenten_add', {project: entity.id}), 'add') }}
            </p>
            <table class="table table-hover">
                <thead></thead>
                <tbody>
                    {% for deelnemer in entity.deelnemers %}
                        <tr>
                            <td>{{ deelnemer }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
