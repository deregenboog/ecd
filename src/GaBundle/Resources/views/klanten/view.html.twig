{% extends 'GaBundle::view.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }} {{ entity }}</h1>
{% endblock %}

{% block content_left %}
    {% include '::klant_basis.html.twig' with {klant: entity.klant} %}
{% endblock %}

{% block content_right %}
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#intakes">Intakes</a></li>
        <li><a data-toggle="tab" href="#verslagen">Verslagen</a></li>
        <li><a data-toggle="tab" href="#groepen">Groepen</a></li>
        <li><a data-toggle="tab" href="#activiteiten">Activiteiten</a></li>
        <li><a data-toggle="tab" href="#afsluiting">Afsluiting</a></li>
    </ul>
    <div class="tab-content">
        <div id="intakes" class="tab-pane active">
            <h2>Intake</h2>
            <dl class="dl-horizontal">
                <dt>Intakedatum</dt>
                <dd>{{ entity.intakedatum|date('d-m-Y') }}</dd>
                <dt>Gezin met kinderen</dt>
                <dd>{{ entity.gezinMetKinderen ? 'Ja' : 'Nee' }}</dd>
                <dt>CoÃ¶rdinator</dt>
                <dd>{{ entity.medewerker }}</dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>Gespreksverslag</dt>
                <dd class="well">{{ entity.gespreksverslag|nl2br }}</dd>
            </dl>
            <h3>Zelfredzaamheidmatrix</h3>
            {% for zrm in entity.zrms %}
                {% include '::_zrm.html.twig' with {entity: zrm} %}
            {% endfor %}
            <h3>Ondersteuning</h3>
            <dl>
                <dt>Zou je het leuk vinden om iedere week met iemand samen iets te ondernemen?</dt>
                <dd>{{ entity.ondernemen ? 'Ja' : 'Nee' }}</dd>
                <dt>Zou je het leuk vinden om overdag iets te doen te hebben?</dt>
                <dd>{{ entity.overdag ? 'Ja' : 'Nee' }}</dd>
                <dt>Zou je een plek in de buurt willen hebben waar je iedere dag koffie kan drinken en mensen kan ontmoeten?</dt>
                <dd>{{ entity.ontmoeten ? 'Ja' : 'Nee' }}</dd>
                <dt>Heeft u hulp nodig met regelzaken?</dt>
                <dd>{{ entity.regelzaken ? 'Ja' : 'Nee' }}</dd>
            </dl>
        </div>
        <div id="verslagen" class="tab-pane">
            <h2>Verslagen</h2>
            {{ html.link('Verslag toevoegen', path('ga_klantverslagen_add', {klantdossier: entity.klant.id}), 'add') }}
            {% for verslag in verslagen %}
                <h3>{{ verslag.created|date('d-m-Y - H:i')~' uur' }}</h3>
                <p>
                    {{ html.link('Verslag bewerken', path('ga_klantverslagen_edit', {id: verslag.id}), 'edit') }}
                </p>
                <dl class="dl-horizontal">
                    <dt>Medewerker</dt>
                    <dd>{{ verslag.medewerker }}</dd>
                    <dt>Opmerking</dt>
                    <dd><div class="well">{{ verslag.opmerking|nl2br }}</div></dd>
                </dl>
            {% endfor %}
        </div>
        <div id="groepen" class="tab-pane">
            {% include 'GaBundle:lidmaatschappen:_list.html.twig' %}
        </div>
        <div id="activiteiten" class="tab-pane">
            {% include 'GaBundle:deelnames:_list.html.twig' %}
        </div>
        <div id="afsluiting" class="tab-pane">
        </div>
    </div>
{% endblock %}
