{% extends 'GaBundle:klantdossiers:view.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Groepsactiviteiten | Klanten
{% endblock %}

{% block subnavigation %}
    {% include '@Ga/subnavigation.html.twig' %}
{% endblock %}

{% block content_right %}
    <h1>Deelnemer wijzigen</h1>
    <p>
        Hier kunt u alleen de Groepsactiviteiten-gegevens voor deze deelnemer wijzigen.
        Klik {{ html.link('hier', path('app_klanten_view', {id: entity.klant.id })) }}
        om naar het basisdossier van deze deelnemer te gaan.
    </p>
    {{ form(form) }}
{% endblock %}
