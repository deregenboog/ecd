{% extends 'GaBundle:vrijwilligerdossiers:view.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Groepsactiviteiten | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Ga/subnavigation.html.twig' %}
{% endblock %}

{% block content_right %}
    <h1>{{ entity_name|capitalize }} wijzigen</h1>
    <p class="alert alert-warning">
        Hier kunt u alleen de Groepsactiviteiten-gegevens voor deze {{ entity_name }} wijzigen.
        Klik {{ html.link('hier', path('app_vrijwilligers_view', {id: entity.vrijwilliger.id })) }}
        om naar het basisdossier van deze {{ entity_name }} te gaan.
    </p>
    {{ form(form) }}
{% endblock %}
