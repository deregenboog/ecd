{% extends 'GaBundle::view.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }} {{ entity }}</h1>
{% endblock %}

{% block content_left %}
    {% include '::vrijwilliger_basis.html.twig' with {vrijwilliger: entity} %}
{% endblock %}

{% block content_right %}
    {% include 'GaBundle:vrijwilligers:_tabs.html.twig' with {vrijwilliger: entity, current: 'groepen'} %}
    <div class="tab-content">
        <div id="groepen" class="tab-pane active">
            <h2>Groepen</h2>
            <p>
                {{ html.link('Groep toevoegen', path('ga_vrijwilligerlidmaatschappen_add', {vrijwilliger: entity.id}), 'add') }}
            </p>
            <h3>Actief</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Groep</th>
                        <th>Startdatum</th>
                        <th>Contact</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for lidmaatschap in lidmaatschappen if not lidmaatschap.einddatum %}
                        <tr>
                            <td>{{ html.link(lidmaatschap.groep, path('ga_groepen_view', {id: lidmaatschap.groep.id})) }}</td>
                            <td>{{ lidmaatschap.startdatum|date('d-m-Y') }}</td>
                            <td>
                                <ul>
                                    {% if lidmaatschap.communicatieEmail %}<li>E-mail</li>{% endif %}
                                    {% if lidmaatschap.communicatiePost %}<li>Post</li>{% endif %}
                                    {% if lidmaatschap.communicatieTelefoon %}<li>Telefoon</li>{% endif %}
                                </ul>
                            </td>
                            <td>
                                {{ html.link('Lidmaatschap wijzigen', path('ga_vrijwilligerlidmaatschappen_edit', {id: lidmaatschap.id}), 'edit') }}
                                {{ html.link('Lidmaatschap beÃ«indigen', path('ga_vrijwilligerlidmaatschappen_close', {id: lidmaatschap.id}), 'close') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <h3>Afgesloten</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Groep</th>
                        <th>Startdatum</th>
                        <th>Einddatum</th>
                        <th>Reden</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for lidmaatschap in lidmaatschappen if lidmaatschap.einddatum %}
                        <tr>
                            <td>{{ html.link(lidmaatschap.groep, path('ga_groepen_view', {id: lidmaatschap.groep.id})) }}</td>
                            <td>{{ lidmaatschap.startdatum|date('d-m-Y') }}</td>
                            <td>{{ lidmaatschap.einddatum|date('d-m-Y') }}</td>
                            <td>{{ lidmaatschap.afsluitreden }}</td>
                            <td>
                                {{ html.link('Lidmaatschap activeren', path('ga_vrijwilligerlidmaatschappen_reopen', {id: lidmaatschap.id}), 'open') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
