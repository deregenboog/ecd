{% extends 'GaBundle::view.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block content_top %}
    <h1>{{ entity_name|capitalize }} {{ entity }}</h1>
{% endblock %}

{% block content_left %}
    {% include '::vrijwilliger_basis.html.twig' with {vrijwilliger: entity} %}
{% endblock %}

{% block content_right %}
    {% include 'GaBundle:vrijwilligers:_tabs.html.twig' with {vrijwilliger: entity, current: 'activiteiten'} %}
    <div class="tab-content">
        <div id="activiteiten" class="tab-pane active">
            <h2>Activiteiten</h2>
            <p>
                {{ html.link('Activiteit toevoegen', path('ga_vrijwilligerdeelnames_add', {vrijwilliger: entity.id}), 'add') }}
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Datum</th>
                        <th>Groep</th>
                        <th>Activiteit</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for deelname in deelnames %}
                        <tr>
                            <td>{{ deelname.activiteit.datum|date('d-m-Y') }}</td>
                            <td>{{ deelname.activiteit.groep }} ({{ deelname.activiteit.groep.werkgebied }})</td>
                            <td>{{ deelname.activiteit.naam }}</td>
                            <td>{{ deelname.status }}</td>
                            <td>
                                {{ html.link('Wijzigen', path('ga_vrijwilligerdeelnames_edit', {id: deelname.id}), 'edit') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
