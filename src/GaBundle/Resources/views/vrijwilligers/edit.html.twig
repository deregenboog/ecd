{% extends '::base.html.twig' %}
{% import '::html.macro.twig' as html %}

{% block title %}
    Groepsactiviteiten | {{ title }}
{% endblock %}

{% block subnavigation %}
    {% include '@Ga/subnavigation.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Deelnemer wijzigen</h1>
    <p>
        Hier kunt u alleen de Groepsactiviteiten-gegevens voor deze {{ entity_name }} wijzigen.
        Klik {{ html.link('hier', path('ga_vrijwilligers_view', {id: entity.vrijwilliger.id })) }}
        om naar het basisdossier van deze {{ entity_name }} te gaan.
    </p>
    {{ form(form) }}
{% endblock %}
